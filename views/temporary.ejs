    <script>
        var recipe = document.getElementById("recipe");
        var maketime = document.getElementById("maketime");
        var calorie = document.getElementById("calorie");

        var recipelist = document.getElementById("recipelist");
        var newInput = document.createElement("input");
        var newLabel = document.createElement("label");
        var newdiv = document.createElement("div");

        
        
        //抓後台資料
       fetch('https://charves.ddns.net/temporary/userdata',{method:"POST"})
        .then(Response => Response.json())
        //json可以換成別的，隨便取
        .then(json => {

            //爬資料更改選單上的內容
            //算食譜數量，用逗號區分
            var countfood = 0;
            for(i = 0; i < json[6].length; i++){
                if(json[6][i] == ','){
                    countfood = countfood +1
                }
            }
            //動態新增食材項目
            var foodtext ="";
            for(i = 0; i < json[6].length; i++){
                //用,區分，如果有,會把,前的內容傳到newLabel.textContent
                if(json[6][i] == ','){
                    newLabel.textContent = foodtext

                    recipelist.innerHTML += '<div class="form-check" style="padding: 3% 3%;" id="recipelist">'+
                                            '<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">'+
                                            '<label class="form-check-label fs-5" for="flexCheckDefault" >'+
                                                foodtext+
                                                '</label>'+
                                                '</div>'
                    foodtext =""

                }
                //不是,就儲存到變數
                else if(json[6][i] != ','){
                    foodtext = foodtext + json[6][i]
                    
                }
                
            }
            
            recipe.textContent = countfood,
            maketime.textContent = json[5] +"\nmin",
            calorie.textContent =  json[3] + "\n卡洛里",

            
            alert(json[3])
         })
        
        
    </script>

    <script>
        //做表單的動態按鈕，會有綠色底線
        function prepareRecipe(){
            
            
            var pRecipe = document.getElementById("準備食材");
            var mTime = document.getElementById("製作時間");
            var cEstimated = document.getElementById("熱量估計");
            pRecipe.classList.add("border-bottom", "border-5", "border-success");
            mTime.classList.remove("border-bottom", "border-5", "border-success");
            cEstimated.classList.remove("border-bottom", "border-5", "border-success");
             
        }

        function makeTime(){
            //宣告
            
            var pRecipe = document.getElementById("準備食材");
            var mTime = document.getElementById("製作時間");
            var cEstimated = document.getElementById("熱量估計");
            pRecipe.classList.remove("border-bottom", "border-5", "border-success");
            mTime.classList.add("border-bottom", "border-5", "border-success");
            cEstimated.classList.remove("border-bottom", "border-5", "border-success");
        }

        function calorisEstimated(){
            //宣告
            
            var pRecipe = document.getElementById("準備食材");
            var mTime = document.getElementById("製作時間");
            var cEstimated = document.getElementById("熱量估計");
            pRecipe.classList.remove("border-bottom", "border-5", "border-success");
            mTime.classList.remove("border-bottom", "border-5", "border-success");
            cEstimated.classList.add("border-bottom", "border-5", "border-success");
             
        }
        //按下儲存
        document.getElementById("li準備食材").addEventListener("click", prepareRecipe);
        document.getElementById("li製作時間").addEventListener("click", makeTime);
        document.getElementById("li熱量估計").addEventListener("click", calorisEstimated);

    </script>
    
   
    
